<view class="goods-container flex flex-wrap justify-between"><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="goods-item bg-white"><navigator class="goods-pic bg-img" style="{{('background-image: url('+IMAGE_URL+item.mainPhotoUrl+');')}}" url="{{'/pages/goodsDetail/goodsDetail?id='+item.goodsId}}"><block wx:if="{{item.inventory==0}}"><view class="goods-mask flex justify-center"><image src="{{IMAGE_URL+'/photo/Fh8qb3ZRiBz4xpL5-FHf8pRUnGhc.png'}}" mode="widthFix"></image></view></block></navigator><view class="goods-name-box"><view class="goods-name two-line">{{item.goodsName}}</view></view><view class="ticket-con flex align-center"><block wx:if="{{item.coupon}}"><view style="position:relative;margin-right:10rpx;"><image class="tic-pic" src="/static/index/tic.png" mode="heightFix"></image><view class="tic-txt text-white">{{item.coupon+"元券"}}</view></view></block><block wx:if="{{item.commissionDesc}}"><view style="position:relative;"><image class="tic-pic" src="/static/index/tic2.png" mode="heightFix"></image><view class="tic-txt text-red">{{item.commissionDesc}}</view></view></block></view><view class="price-con flex justify-between"><view style="color:#AAAAAA;text-decoration:line-through;">{{"￥"+item.primePrice}}</view><view style="color:#666666;">{{"累计已售"+item.totalSalesVolume+"件"}}</view></view><view class="flex justify-between align-end"><view class="text-red" style="font-size:26rpx;">券后￥<text style="font-size:36rpx;font-weight:700;">{{item.price}}</text></view><navigator class="{{['buy-btn text-white round',item.inventory==0?'bg-aaa':'bg-red']}}" url="{{'/pages/goodsDetail/goodsDetail?id='+item.goodsId}}">{{item.inventory==0?'已售完':'自购'}}</navigator></view></view></block></view>