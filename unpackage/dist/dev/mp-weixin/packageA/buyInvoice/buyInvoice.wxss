page {
  width: 100vw;
  height: 100vh;
  background-color: #fff;
}
.check {
  font-size: 36rpx;
}
.invoice-box .invoice-item {
  border-bottom: 1rpx solid #f1f1f1;
  padding: 0 30rpx;
  height: 160rpx;
}
.invoice-box .invoice-item .goods-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  -webkit-box-shadow: 0 0 15rpx 1rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0 0 15rpx 1rpx rgba(0, 0, 0, 0.1);
}
.bottom .bottom-con {
  height: 100rpx;
  padding: 0 30rpx;
  border-top: 1rpx solid #f1f1f1;
}
.bottom .bottom-con .next {
  height: 56rpx;
  width: 144rpx;
  line-height: 56rpx;
  text-align: center;
  -webkit-border-radius: 5rpx;
