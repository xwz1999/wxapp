page {
  background-color: #F3F4F6;
}
.top-container {
  position: relative;
  -webkit-border-radius: 80rpx/30rpx;
          border-radius: 80rpx/30rpx;
  -webkit-border-top-left-radius: 0;
          border-top-left-radius: 0;
  -webkit-border-top-right-radius: 0;
          border-top-right-radius: 0;
  overflow: hidden;
  height: 450rpx;
}
.top-container .user-msg-box {
  position: absolute;
  width: 100%;
  bottom: 150rpx;
  left: 0;
  padding: 0 30rpx;
}
.top-container .user-msg-box .avatar {
  width: 140rpx;
  height: 140rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.top-container .user-msg-box .nickname {
  font-size: 42rpx;
  margin: 10rpx 0;
}
.top-container .user-msg-box .level-box {
  color: #B25E34;
  background-color: #F5CA88;
  height: 36rpx;
  line-height: 36rpx;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  padding: 0 20rpx;
  font-size: 20rpx;
}
.top-container .balance-box {
  position: absolute;
  bottom: 0;
  width: 690rpx;
  left: 30rpx;
}
.top-container .balance-box .balance-con {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  color: #FFDEAA;
  font-size: 20rpx;
}
.top-container .balance-box .balance-con .widthdraw-btn {
  height: 50rpx;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#FECCAB), to(#FEB273));
  background-image: -webkit-linear-gradient(#FECCAB, #FEB273);
  background-image: linear-gradient(#FECCAB, #FEB273);
  font-size: 28rpx;
  color: #6F4019;
}
.box {
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  overflow: hidden;
  margin: 20rpx 20rpx 0;
}
.box .subtitle {
  padding: 0 20rpx;
  line-height: 84rpx;
  font-size: 32rpx;
  color: #000;
  border-bottom: 2rpx solid #E6E6E6;
  font-weight: 700;
}
.box .subtitle .more {
  font-size: 26rpx;
  color: #AAAAAA;
  font-weight: normal;
}
.box:last-child {
  margin-bottom: 200rpx;
}
.box .order-item {
  width: 130rpx;
  padding: 30rpx 0;
  position: relative;
}
.box .order-item .order-count {
  position: absolute;
  right: 15rpx;
  top: 20rpx;
  color: #FFFFFF;
  background-color: red;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  height: 30rpx;
  width: 30rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
}
.card-con > view {
  width: 200rpx;
  height: 134rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  line-height: 45rpx;
  font-size: 24rpx;
  color: #999999;
}
.card-con > view .num {
  color: #000;
  font-size: 36rpx;
}
.other-item {
  width: 150rpx;
  color: #999;
  font-size: 24rpx;
  padding: 30rpx 0;
}
.other-item text {
  font-size: 66rpx;
}
.money-box {
  padding: 0 20rpx;
  color: #999;
}
.money-box > view {
  padding: 20rpx 0;
  line-height: 45rpx;
}
.txt {
  font-size: 24rpx;
}
.num {
  font-size: 32rpx;
  color: #333;
}

