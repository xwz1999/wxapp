page {
  height: 100vh;
  width: 100vw;
}
.tab-con .tab {
  border: 2rpx solid #DDDDDD;
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  position: relative;
}
.tab-con .tab view {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 900;
  text-align: center;
}
.tab-con .tab .current {
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -100;
  -webkit-transition: 0.5s;
  transition: 0.5s;
}
.tab-con .tab .moveright {
  -webkit-transform: translateX(160rpx);
          transform: translateX(160rpx);
}
.tab-con .btn {
  margin-left: 10rpx;
  padding: 0 10rpx;
  line-height: 60rpx;
}
.nav-box {
  line-height: 80rpx;
  -webkit-box-shadow: 0 0 15rpx 1rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0 0 15rpx 1rpx rgba(0, 0, 0, 0.1);
}
.nav-box .nav-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  font-weight: 700;
}
.nav-box .active {
  position: relative;
  color: red;
}
.nav-box .active::after {
  content: "";
  position: absolute;
  bottom: 5rpx;
  width: 100rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  height: 6rpx;
  -webkit-border-radius: 3rpx;
          border-radius: 3rpx;
  background-color: red;
}
.order-item {
  padding: 25rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.order-item .order-item-top {
  line-height: 40rpx;
  padding: 10rpx 0;
}
.order-item .order-item-top .buy {
  font-size: 28rpx;
  background-color: #FE3E27;
  -webkit-border-radius: 5rpx;
          border-radius: 5rpx;
  margin-right: 10rpx;
  width: 40rpx;
}
.order-item .order-btn {
  margin: 30rpx 0 10rpx;
}
.order-item .order-btn button {
  padding: 0 15rpx;
  height: 60rpx;
  font-size: 28rpx;
}

