page {
  background-color: #F5F5F5;
}
.total-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
}
.total-box .total-box-con {
  position: relative;
}
.total-box .total-box-con .con-box {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding: 30rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  overflow: hidden;
  -webkit-box-shadow: 0 3rpx 10rpx 3rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0 3rpx 10rpx 3rpx rgba(0, 0, 0, 0.1);
}
.total-box .total-box-con .con-box .text {
  color: #aaa;
  font-size: 24rpx;
  margin-bottom: 15rpx;
}
.total-box .total-box-con .con-box .num {
  color: #000;
  font-size: 32rpx;
}
.screening-box {
  line-height: 64rpx;
  margin: 60rpx 30rpx 0;
}
.screening-box .year {
  -webkit-border-radius: 32rpx;
          border-radius: 32rpx;
  padding: 0 30rpx;
  padding-right: 20rpx;
}
.goods-box {
  margin-bottom: 200rpx;
}
.goods-box .goods-item {
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.goods-box .goods-item .goods-pic {
  width: 160rpx;
  height: 160rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin-right: 30rpx;
}
.goods-box .goods-item .span {
  background-color: #E9F5EE;
  color: #31A462;
  font-size: 20rpx;
  padding: 0 10rpx;
}
.money-box {
  width: 600rpx;
  line-height: 45rpx;
  padding-top: 40rpx;
}
.money-box .txt {
  color: #aaa;
  font-size: 24rpx;
}
.money-box .num {
  font-size: 28rpx;
  color: black;
