page {
  background-color: #FFFFFF;
}
.mask {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  background-color: rgba(255, 255, 255, 0.6);
  z-index: 10;
}
.mask .top-msg {
  line-height: 80rpx;
  background-color: #FFF5E1;
  color: #E9A213;
  padding: 0 30rpx;
}
.input-box {
  line-height: 100rpx;
  font-size: 32rpx;
}
.input-box input {
  height: 100rpx;
  font-size: 60rpx;
  padding: 0 10rpx;
}
.input-box .place {
  font-size: 30rpx;
  color: #DDDDDD;
}
.where {
  padding: 30rpx 0;
}
.where .nocheck {
  color: #999;
}
.btn {
  color: #FFFFFF;
  margin: 15rpx 0 10rpx;
}
.tips {
  color: #909399;
}
.tip-model {
  width: 670rpx;
}
.tip-model .bg-box {
  position: relative;
}
.tip-model .bg-box .bg-con {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.tip-model .tip-item {
  padding: 15rpx 0;
  line-height: 36rpx;
}
.tip-model .tip-item image {
  width: 34rpx;
}
.my-model {
  width: 550rpx;
}
.my-model .title {
  padding-top: 30rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}
.my-model .content {
  padding: 30rpx 50rpx;
}
.keyboard .keyboard-close {
  position: absolute;
  right: 0;
  line-height: 60rpx;
  top: 0;
  width: 60rpx;
  font-size: 48rpx;
}
.center-con {
  margin: 0 30rpx;
}
.center-con .center-input {
  margin-bottom: 40rpx;
  height: 80rpx;
}
.center-con .center-tip {
  line-height: 40rpx;
  margin-bottom: 60rpx;
  font-size: 26rpx;
}
.center-con .intro {
  font-size: 22rpx;
  color: #AAAAAA;
}
.center-con .center-bottom {
  font-size: 24rpx;
  color: #aaa;
  line-height: 60rpx;
}

