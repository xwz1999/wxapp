page {
  background-color: #F5F5F5;
  width: 100vw;
  height: 100vh;
}
.total-box {
  padding: 30rpx;
  background-color: #16182B;
}
.total-box .total-box-con {
  width: 690rpx;
  height: 340rpx;
  position: relative;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
  overflow: hidden;
}
.total-box .total-box-con .con-box {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding: 30rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  overflow: hidden;
  -webkit-box-shadow: 0 3rpx 10rpx 3rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0 3rpx 10rpx 3rpx rgba(0, 0, 0, 0.1);
}
.total-box .total-box-con .con-box .text {
  color: #aaa;
  font-size: 24rpx;
  margin-bottom: 15rpx;
}
.total-box .total-box-con .con-box .num {
  color: #000;
  font-size: 32rpx;
}
.time-box {
  line-height: 60rpx;
  padding: 60rpx 30rpx 30rpx;
  color: #AAAAAA;
}
.time-box .time {
  -webkit-border-radius: 40rpx;
          border-radius: 40rpx;
  padding: 0 10rpx 0 20rpx;
}
.month-earning-box {
  margin: 30rpx;
  -webkit-box-shadow: 0 3rpx 10rpx 3rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0 3rpx 10rpx 3rpx rgba(0, 0, 0, 0.1);
  -webkit-border-bottom-left-radius: 10rpx;
          border-bottom-left-radius: 10rpx;
  -webkit-border-bottom-right-radius: 10rpx;
          border-bottom-right-radius: 10rpx;
}
.month-earning-box .month-top {
  line-height: 125rpx;
  border-bottom: 4rpx dashed #ddd;
  padding: 0 30rpx;
}
.month-earning-box .month-con {
  padding: 20rpx 0 100rpx;
}
.month-earning-box .month-con .item {
  padding: 20rpx 30rpx;
  position: relative;
}
.month-earning-box .month-con .item::before {
  content: "";
  height: 60rpx;
  width: 6rpx;
  -webkit-border-radius: 5rpx;
          border-radius: 5rpx;
  background-color: #D5101A;
  position: absolute;
  left: 60rpx;
  bottom: 0;
  -webkit-transform: translateY(50%);
          transform: translateY(50%);
  z-index: 100;
}
.month-earning-box .month-con .item::after {
  content: "";
  height: 60rpx;
  width: 6rpx;
  -webkit-border-radius: 5rpx;
          border-radius: 5rpx;
  background-color: #D5101A;
  position: absolute;
  right: 60rpx;
  bottom: 0;
  -webkit-transform: translateY(50%);
          transform: translateY(50%);
  z-index: 100;
}
.month-earning-box .month-con .item:last-child::before {
  content: none;
}
.month-earning-box .month-con .item:last-child::after {
  content: none;
}
.month-earning-box .month-con .item .item-con {
  background-color: #F7F8FA;
  padding: 30rpx;
}
.month-earning-box .month-con .item .item-con .text {
  color: #aaa;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.month-earning-box .month-con .item .item-con .num {
  color: #000;
  font-size: 32rpx;
}

