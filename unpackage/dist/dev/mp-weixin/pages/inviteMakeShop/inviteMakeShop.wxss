page {
  background-color: #3A3943;
}
.top-bg {
  position: relative;
  height: 480rpx;
}
.top-con {
  position: absolute;
  width: 100%;
  left: 0;
  top: 40rpx;
}
.user-box {
  position: relative;
  top: -50rpx;
  left: 30rpx;
  width: 690rpx;
  height: 386rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  overflow: hidden;
}
.user-box .user-con {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 35rpx;
}
.user-box .user-con .avatar {
  width: 92rpx;
  height: 92rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  margin-right: 20rpx;
}
.user-box .line-box {
  position: absolute;
  bottom: 40rpx;
  width: 590rpx;
  left: 50rpx;
  font-size: 24rpx;
}
.user-box .line-box .num-con {
  position: relative;
  top: -16rpx;
}
.code-box {
  margin: 0 30rpx;
  -webkit-border-bottom-left-radius: 10rpx;
          border-bottom-left-radius: 10rpx;
  -webkit-border-bottom-right-radius: 10rpx;
          border-bottom-right-radius: 10rpx;
  overflow: hidden;
}
.code-box .code-top {
  padding: 40rpx 0;
}
.code-box .code-top image {
  width: 136rpx;
}
.code-box .code-bottom {
  padding: 30rpx 20rpx;
  border-top: 1rpx solid #F1F1F1;
}
.code-box .code-bottom .item {
  height: 100rpx;
  font-size: 24rpx;
}
.code-box .code-bottom .item image {
  width: 60rpx;
  margin-right: 20rpx;
}
.code-box .code-bottom .txt {
  color: #333333;
  font-weight: 700;
  line-height: 45rpx;
}
.code-box .code-bottom .num {
  color: #aaa;
}
.steps-box {
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  padding: 30rpx 0;
  margin: 40rpx 30rpx;
}
.steps-box image {
  width: 60rpx;
}
.steps-box .step-title {
  color: #000;
  font-weight: 900;
  line-height: 55rpx;
  padding: 0 10rpx;
}
.steps-box .steps-con {
  line-height: 30rpx;
  font-size: 20rpx;
}
.steps-box .steps-con .line {
  width: 100rpx;
  margin: 40rpx 10rpx 0;
  border-top: 2rpx dashed #E53935;
}
.steps-box .steps-con image {
  width: 80rpx;
}
.invitationNo {
  position: relative;
  font-size: 48rpx;
  color: #333;
  line-height: 60rpx;
  font-weight: 700;
}
.invitationNo .copy {
  font-size: 20rpx;
  margin-left: 10rpx;
  text-decoration: underline;
  position: absolute;
  left: 100%;
  bottom: 0;
  white-space: nowrap;
}

