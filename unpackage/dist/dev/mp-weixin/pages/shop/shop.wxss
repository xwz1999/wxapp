.top-box {
  padding: 180rpx 30rpx 50rpx;
  background-color: #3A3943;
}
.top-box .bg-box {
  width: 690rpx;
  height: 386rpx;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
  overflow: hidden;
}
.top-box .bg-box .top-con {
  padding: 0 20rpx;
  height: 156rpx;
}
.top-box .bg-box .line-box {
  position: relative;
  width: 590rpx;
  height: 8rpx;
  -webkit-border-radius: 5rpx;
          border-radius: 5rpx;
  background-color: rgba(0, 0, 0, 0.3);
  left: 50rpx;
  top: 150rpx;
}
.top-box .bg-box .line-box .line-con {
  position: absolute;
  top: 0;
  width: 30%;
  -webkit-border-radius: 5rpx;
          border-radius: 5rpx;
  background-color: rgba(255, 255, 255, 0.8);
  height: 100%;
}
.top-box .bg-box .line-box .line-con .animal-con {
  width: 100%;
  height: 100%;
  position: relative;
}
.top-box .bg-box .line-box .line-con .animal {
  width: 60rpx;
  position: absolute;
  bottom: 30rpx;
  right: 0;
  -webkit-transform: translateX(50%);
          transform: translateX(50%);
}
.top-box .bg-box .line-box .dots-con {
  position: absolute;
  top: 50%;
  width: 100%;
  height: 50rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.top-box .bg-box .line-box .dots-con .dot-item {
  width: 20rpx;
  height: 40rpx;
  position: relative;
}
.top-box .bg-box .line-box .dots-con .dot {
  width: 12rpx;
  height: 12rpx;
  border: 1rpx solid #fff;
  background-color: rgba(0, 0, 0, 0.4);
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.top-box .bg-box .line-box .dots-con .dot-msg-con {
  position: absolute;
  width: 20rpx;
  height: 40rpx;
  left: 0;
  top: 10rpx;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 20rpx solid rgba(0, 0, 0, 0.5);
  border-top: 20rpx solid transparent;
}
.top-box .bg-box .line-box .dots-con .dot-msg {
  position: absolute;
  top: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  padding: 10rpx 15rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
  white-space: nowrap;
}
