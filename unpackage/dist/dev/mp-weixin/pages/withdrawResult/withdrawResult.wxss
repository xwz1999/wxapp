.status-icon {
  font-size: 22rpx;
  color: #666;
  padding: 50rpx 0 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.status-icon .text {
  margin: 10rpx 0 5rpx;
  font-size: 24rpx;
}
.sub-title {
  position: relative;
  padding: 0 20rpx;
}
.sub-title::after {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #D40000;
}
.box {
  margin: 20rpx 30rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  border: 1rpx solid #ddd;
  padding: 20rpx;
  line-height: 60rpx;
}
.box .span {
  width: 280rpx;
}
.box .tip-title {
  line-height: 60rpx;
  font-size: 28rpx;
}
.btn {
  color: #FFFFFF;
  margin: 50rpx 30rpx 200rpx;
