page {
  background-color: #f3f3f3;
}
.waitpay {
  padding: 30rpx;
  line-height: 50rpx;
  background-image: -webkit-gradient(linear, left top, right top, from(#CE2727), to(#EE5250));
  background-image: -webkit-linear-gradient(left, #CE2727, #EE5250);
  background-image: linear-gradient(to right, #CE2727, #EE5250);
}
.pay-msg {
  padding: 20rpx 30rpx 0;
  margin-bottom: 20rpx;
}
.pay-msg .item {
  line-height: 60rpx;
  font-size: 26rpx;
  color: #888888;
}
.box {
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
}
.box.address-box {
  padding: 30rpx;
}
.box .address-con {
  font-size: 26rpx;
  color: #666;
  margin: 0 15rpx;
}
.box .address-con .address-detail {
  line-height: normal;
  margin-top: 10rpx;
}
.box.plain-box {
  line-height: 70rpx;
  padding: 20rpx 30rpx;
}
.box.plain-box input {
  height: 60rpx;
  max-height: 500rpx;
  text-align: right;
  padding: 0 10rpx;
}
.box.plain-box .placeholder {
  color: #AAAAAA;
  font-size: 26rpx;
}
.box .cuIcon-right {
  color: #DDDDDD;
  font-size: 36rpx;
}
.box.goods-msg-box {
  padding: 20rpx 30rpx;
}
.box.goods-msg-box .shop-msg {
  height: 60rpx;
}
.box .num {
  color: #AAAAAA;
}
.box.coupon-box {
  padding: 20rpx 30rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}
.box.order-msg {
  padding: 20rpx 30rpx 0;
}
.box.order-msg .item {
  line-height: 70rpx;
}
.box.order-msg .item .span {
  width: 200rpx;
}
.box.order-msg .item:last-child {
  line-height: 100rpx;
  border-top: 1rpx solid #f1f1f1;
}
.box.order-msg .copy {
  padding: 0 10rpx;
  line-height: 30rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  background-color: #f1f1f1;
  font-size: 20rpx;
  margin-left: 10rpx;
  color: #666666;
}
.bottom-box {
  position: fixed;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  bottom: 0;
  -webkit-box-shadow: 0 0 15rpx 1rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0 0 15rpx 1rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

