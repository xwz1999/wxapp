page {
  background-color: #F5F5F5;
  width: 100vw;
  height: 100vh;
}
.num {
  font-size: 60rpx;
  margin-top: 10rpx;
}
.screening-box {
  position: relative;
}
.screening-box .pick {
  padding: 0 30rpx;
  padding-right: 20rpx;
  line-height: 64rpx;
  -webkit-border-radius: 32rpx;
          border-radius: 32rpx;
}
.screening-box .pick text {
  font-size: 34rpx;
}
.mask {
  background-color: rgba(0, 0, 0, 0.6);
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 10;
}
.type-box {
  padding: 20rpx 30rpx;
  position: absolute;
  top: 0;
  width: 100%;
  left: 0;
  -webkit-transform: translateY(-100%);
          transform: translateY(-100%);
  -webkit-transition: 0.3s;
  transition: 0.3s;
  z-index: 20;
}
.type-box .type-item {
  width: 220rpx;
  line-height: 60rpx;
  margin: 10rpx 0;
  text-align: center;
  background-color: #F1F1F1;
}
.type-box .active {
  background-color: #FFDDDD;
  color: #FF5B5B;
}
.move {
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.detal-item {
  padding: 0 30rpx;
  height: 120rpx;
  border-bottom: 1rpx solid #f7f7f7;
}
.detal-item:last-child {
  margin-bottom: 200rpx;
}

