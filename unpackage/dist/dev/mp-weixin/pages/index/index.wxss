  display: inline-block;
  text-align: center;
  width: 150rpx;
}
.recommend-box .time-item .time {
  font-size: 36rpx;
  font-weight: 900;
}
.recommend-box .time-item .status {
  font-size: 20rpx;
}
.recommend-box .before {
