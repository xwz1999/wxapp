.header-box {
  height: 600rpx;
  padding-top: 180rpx;
  position: relative;
  background-color: rgba(0, 0, 0, 0.5);
  background-image: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0)), to(rgba(255, 255, 255, 0.7)));
  background-image: -webkit-linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.7));
  background-image: linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.7));
}
.header-box .blur-bg {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: -10;
}
.header-box .blur-bg .blur-bg-con {
  width: 100%;
  height: 100%;
  -webkit-filter: blur(100rpx);
          filter: blur(100rpx);
  -webkit-transform: scale(1.5);
          transform: scale(1.5);
}
.header-box .location {
  max-width: 200rpx;
  font-size: 32rpx;
}
.header-box .search-box {
  margin: 0 20rpx;
  line-height: 60rpx;
}
.header-box .search-box .search-con {
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  overflow: hidden;
  padding: 0 20rpx;
  background-color: rgba(255, 255, 255, 0.5);
}
.header-box .search-box .search-con input {
  height: 60rpx;
  padding-left: 20rpx;
}
.header-box .search-box .search-con .placeholder {
  color: #fff;
}
.header-box .search-box .icon-box u-icon {
  padding: 0 15rpx;
  font-size: 48rpx;
}
.header-box .weather-box {
  font-size: 20rpx;
  padding: 0 20rpx;
  height: 100rpx;
}
.header-box .swiper-box {
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  margin: 0 20rpx;
  min-height: 300rpx;
  overflow: hidden;
}
.navbar-box {
  margin: 70rpx 20rpx 20rpx;
  background-color: transparent !important;
}
.navbar-box .cu-item {
  line-height: normal;
  padding: 0;
